# Smart EBL - ESPHome Secrets Template
# Copy this file to secrets.yaml and fill in your values
# NEVER commit secrets.yaml to version control!

# WiFi credentials
wifi_ssid: "your-wifi-ssid"
wifi_password: "your-wifi-password"

# Fallback AP password (when WiFi connection fails)
fallback_password: "smart-ebl-fallback"

# Home Assistant API encryption key (generate with: openssl rand -base64 32)
api_encryption_key: "generate-a-random-32-byte-base64-key"

# OTA update password
ota_password: "your-ota-password"
